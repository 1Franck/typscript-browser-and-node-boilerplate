{
  "name": "typescript-browser-node-boilerplate",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc -w",
    "build:node": "npm run lint && tsc -p tsconfig.node.json -w",
    "build:browser": "npm run lint && rollup -c --watch",
    "build:all": "npm run build:node && npm run build:browser",
    "build:rollup": "rollup -cw",
    "lint": "eslint . --fix --ext .ts,.tsx -c .eslintrc.js",
    "tests": "jest",
    "tests:coverage": "jest --coverage",
    "tests:watch": "jest --watch"
  },
  "devDependencies": {
    "@types/jest": "^26.0.4",
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "chokidar": "^3.4.1",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-typescript": "^8.0.2",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-prettier": "^3.1.4",
    "jest": "^26.1.0",
    "jest-each": "^26.1.0",
    "prettier": "^2.0.5",
    "rollup": "^2.21.0",
    "rollup-plugin-babel-minify": "^10.0.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-eslint": "^7.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-prettier": "^2.1.0",
    "rollup-plugin-typescript": "^1.0.1",
    "ts-jest": "^26.1.2",
    "tslib": "^2.0.0",
    "typescript": "^3.9.6",
    "typescript-eslint": "0.0.1-alpha.0"
  }
}
